#MACRO COM LOOP PORTANTO VC PODE USAR ANTES MESMO DE SE APROXIMAR DO GATE

#GATE DE DG SAIDA
if findtype "blue moongate" ground 2820 any 2 as saidaGate
    while not gumpexists 3773199800
        dclick saidaGate
    wait 300
    endwhile
    if gumpexists 3773199800
        gumpresponse 2 3773199800
        stop
    endif
    endif
    
#GATE AZUL DE PLAYER
if findtype "blue moongate" ground 0 any 1 as blueGate
while not gumpexists 3899019871
dclick blueGate
wait 300
endwhile
if gumpexists 3899019871
gumpresponse 2 3899019871
stop
endif
endif

