#MACRO COM LOOP PORTANTO VC PODE USAR ANTES MESMO DE SE APROXIMAR DO GATE

#GATE DG ENTRADA
if findtype "blue moongate" ground 2822 any 2 or findtype "blue moongate" ground 2820 any 2 or findtype '30528' ground 2091 any 2 or findtype "blue moongate" ground 2821 any 2 or findtype '27754' ground 2821 any 2 as dgGate
    wait 350
    if not gumpexists 3773199800
        dclick dgGate
    endif

    while gumpexists 3773199800
        gumpresponse 2 3773199800
    if not gumpexists 3773199800
        stop
    endif
    endwhile
endif

    
#GATE AZUL DE PLAYER
if findtype "blue moongate" ground 0 any 1 or findtype 'moongate' ground any any 1 as blueGate
    wait 350
    while gumpexists 3899019871
        gumpresponse 2 3899019871
    if not gumpexists 3899019871
        stop
    endif
    endwhile
    if not gumpexists 3899019871
        dclick blueGate
    endif
    endif      
    
#GATE OMNI ENTRADA
if findtype '27754' ground 2260 any 2 as omniGate
    wait 350
    while gumpexists 687547349
        gumpresponse 10 687547349
    if not gumpexists 687547349
        stop
    endif
endwhile
    if not gumpexists 687547349
        dclick omniGate
    endif
    endif
    loop
